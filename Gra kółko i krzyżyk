import tkinter as tk
from tkinter import messagebox

class KolkoKrzyzyk:
    def __init__(self, root):
        self.root = root
        self.root.title("Kółko i Krzyżyk")

        self.player = "X"  # Gracz X zaczyna
        self.board = [""] * 9  # Pusty board
        self.buttons = []

        # Tworzenie przycisków (siatka 3x3)
        for i in range(9):
            button = tk.Button(self.root, text="", font=("Arial", 40), width=5, height=2,
                               command=lambda i=i: self.click(i))
            button.grid(row=i//3, column=i%3)
            self.buttons.append(button)

    def click(self, index):
        # Sprawdzamy, czy pole nie zostało już zajęte
        if self.board[index] == "":
            # Aktualizacja planszy
            self.board[index] = self.player
            self.buttons[index].config(text=self.player)

            # Sprawdzanie, czy ktoś wygrał
            if self.check_winner():
                messagebox.showinfo("Koniec gry", f"Gracz {self.player} wygrał!")
                self.reset_board()
            elif "" not in self.board:
                messagebox.showinfo("Koniec gry", "Remis!")
                self.reset_board()
            else:
                # Zmiana gracza
                self.player = "O" if self.player == "X" else "X"

    def check_winner(self):
        # Możliwe zwycięskie kombinacje
        win_combinations = [
            [0, 1, 2], [3, 4, 5], [6, 7, 8],  # Wiersze
            [0, 3, 6], [1, 4, 7], [2, 5, 8],  # Kolumny
            [0, 4, 8], [2, 4, 6]              # Przekątne
        ]
        for combo in win_combinations:
            if self.board[combo[0]] == self.board[combo[1]] == self.board[combo[2]] != "":
                return True
        return False

    def reset_board(self):
        # Reset planszy
        self.board = [""] * 9
        for button in self.buttons:
            button.config(text="")
        self.player = "X"

if __name__ == "__main__":
    root = tk.Tk()
    game = KolkoKrzyzyk(root)
    root.mainloop()
