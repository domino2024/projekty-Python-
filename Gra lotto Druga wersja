import random
import time

# Pobieranie liczb od u≈ºytkownika
mojeLiczby = set()
print("Witaj w grze Lotto! Podaj 6 r√≥≈ºnych liczb z zakresu 1‚Äì49.")
while len(mojeLiczby) < 6:
    try:
        liczba = int(input(f"Podaj liczbƒô #{len(mojeLiczby)+1}: "))
        if liczba < 1 or liczba > 49:
            print("Liczba musi byƒá z zakresu 1‚Äì49.")
        elif liczba in mojeLiczby:
            print("Ta liczba zosta≈Ça ju≈º podana.")
        else:
            mojeLiczby.add(liczba)
    except ValueError:
        print("To nie jest poprawna liczba. Spr√≥buj ponownie.")

# Losowanie liczb Lotto
listaLotto = list(range(1, 50))
wylosowane = []

time.sleep(2)
print("\nKomora maszyny losujƒÖcej jest pusta...")
time.sleep(2)
print("Nastƒôpuje zwolnienie blokady...")
time.sleep(2)
print("I rozpoczynamy losowanie 6 liczb...\n")

for i in range(6):
    time.sleep(1.5)
    random.shuffle(listaLotto)
    liczbaWylosowana = listaLotto.pop()
    wylosowane.append(liczbaWylosowana)
    print(f"Wylosowano liczbƒô: {liczbaWylosowana}")

# Wyniki
print("\nWszystkie wylosowane liczby:", sorted(wylosowane))
print("Twoje liczby:", sorted(mojeLiczby))

trafienia = set(wylosowane) & mojeLiczby
print(f"Liczba trafie≈Ñ: {len(trafienia)}")

if len(trafienia) == 6:
    print("üéâ GRATULACJE! Trafi≈Çe≈õ 6/6 i wygra≈Çe≈õ g≈Ç√≥wnƒÖ nagrodƒô!")
elif len(trafienia) > 0:
    print("Trafione liczby:", sorted(trafienia))
else:
    print("Niestety, tym razem nic nie trafi≈Çe≈õ. Spr√≥buj ponownie!")
